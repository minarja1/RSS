<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/rounded_corner</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/divider</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <style name="MaterialCard.Dialog" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/dialog_rounded_corner</item>
        <item name="cardBackgroundColor">@color/colorBackground</item>
        <item name="cardElevation">0dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>


    <style name="TextAppearance.Subtitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>


    <style name="OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:textAppearance">@style/TextAppearance.Button</item>
        <item name="iconTint">?attr/colorSecondary</item>
        <item name="android:minWidth">24dp</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">16sp</item>
    </style>

</resources>