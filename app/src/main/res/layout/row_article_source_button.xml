<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sourceButtonBackground"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/drawer_content_padding">

    <ImageView
        android:id="@+id/sourceButtonImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/sourceButtonTextView"
        tools:text="Space.com | NASA, Space Exploration and Astronpace Exploration and Astronpace Exploration and Astronpace Exploration and Astronomy News"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.Universe.Subtitle"
        android:textColor="@color/textColorPrimary" />

</LinearLayout>