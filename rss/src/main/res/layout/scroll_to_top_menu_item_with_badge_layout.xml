<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/menu_item_size"
    android:layout_height="@dimen/menu_item_size">

    <FrameLayout
        android:layout_width="@dimen/menu_item_ripple_size"
        android:layout_height="@dimen/menu_item_ripple_size"
        android:layout_gravity="center"
        android:background="?android:attr/selectableItemBackgroundBorderless" />


    <FrameLayout
        android:layout_width="@dimen/menu_badge_offset"
        android:layout_height="@dimen/menu_badge_offset"
        android:layout_gravity="center"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/filterIconImageView"
            android:layout_width="@dimen/menu_item_icon_size"
            android:layout_height="@dimen/menu_item_icon_size"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_arrow_circle_up_24" />


        <include
            layout="@layout/include_menu_badge" />

    </FrameLayout>

</FrameLayout>