<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_appbar_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:text="@string/appearance"
                android:textAppearance="@style/TextAppearance.RSS.SettingsSection"
                app:drawableStartCompat="@drawable/ic_baseline_palette_24"
                app:drawableTint="@color/textColorSecondary" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/expandAllCardsSwitch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:minHeight="56dp"
                android:text="@string/expand_all_cards"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:text="@string/notifications"
                android:textAppearance="@style/TextAppearance.RSS.SettingsSection"
                app:drawableStartCompat="@drawable/ic_baseline_notifications_24"
                app:drawableTint="@color/textColorSecondary" />


            <TextView
                android:id="@+id/notificationsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:minHeight="56dp"
                android:paddingHorizontal="2dp"
                android:text="@string/notification_settings"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                app:drawableEndCompat="@drawable/ic_24_arrow_next"
                app:drawableTint="@color/colorAccent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:text="@string/general"
                android:textAppearance="@style/TextAppearance.RSS.SettingsSection"
                app:drawableStartCompat="@drawable/ic_baseline_settings_24"
                app:drawableTint="@color/textColorSecondary" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/openBrowserSwitch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:minHeight="56dp"
                android:text="@string/open_articles_in_browser"
                android:textSize="16sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/useExternalBrowserSwitch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:minHeight="56dp"
                android:text="@string/use_external_browser"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>