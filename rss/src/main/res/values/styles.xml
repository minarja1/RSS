<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="MaterialCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/rounded_corner</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/cardOutline</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="MaterialCardBorderLess" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="cardElevation">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ClickableCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/rounded_corner_small</item>
        <item name="cardBackgroundColor">@color/colorWindowBackground</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/cardOutline</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <style name="MaterialCard.Dialog" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/dialog_rounded_corner</item>
        <item name="cardBackgroundColor">@color/colorBackground</item>
        <item name="cardElevation">0dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>


    <style name="AppTheme.TabLayout" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabGravity">center</item>
        <item name="tabTextColor">@color/textColorSecondary</item>
        <item name="tabSelectedTextColor">@color/textColorPrimary</item>
        <item name="tabTextAppearance">@style/TextAppearance.Universe.Subtitle</item>
        <item name="android:singleLine">false</item>
        <item name="android:background">@drawable/bg_bottom_line</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="TextAppearance.Universe.Base" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="TextAppearance.Universe.Headline1" parent="TextAppearance.Universe.Base">
        <item name="android:textSize">30sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextAppearance.Universe.Headline2" parent="TextAppearance.Universe.Base">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Universe.Headline3" parent="TextAppearance.Universe.Base">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Universe.Headline4" parent="TextAppearance.Universe.Base">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Universe.Headline4NoBold" parent="TextAppearance.Universe.Base">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="TextAppearance.Universe.Headline5" parent="TextAppearance.Universe.Base">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Universe.Body1" parent="TextAppearance.Universe.Base">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="TextAppearance.Universe.Body2" parent="TextAppearance.Universe.Base">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Universe.Subtitle" parent="TextAppearance.Universe.Base">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Universe.Title" parent="TextAppearance.Universe.Base">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Universe.Headline7" parent="TextAppearance.Universe.Base">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:textAppearance">@style/TextAppearance.Universe.Button</item>
        <item name="iconTint">?attr/colorSecondary</item>
        <item name="android:minWidth">24dp</item>
    </style>

    <style name="TextAppearance.Universe.Button" parent="TextAppearance.Universe.Base">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomSheetShapeAppearance" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>

        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>

        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar -->
        <item name="searchBackground">@color/colorToolbar</item>

        <!-- Change clear text icon -->
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close_inverted</item>

        <!-- Change up icon -->
        <item name="searchBackIcon">@drawable/ic_baseline_arrow_back_24</item>

        <!-- Change text color for edit text. This will also be the color of the cursor -->
        <item name="android:textColor">@color/textColorPrimary</item>

        <!-- Change hint text color for edit text -->
        <item name="android:textColorHint">@color/textColorTertiary</item>


        <!-- Change icon for the suggestions -->
        <item name="searchSuggestionIcon">@drawable/ic_suggestion</item>

        <!-- Change background for the suggestions list view -->
        <item name="searchSuggestionBackground">@android:color/white</item>

        <!-- Hint for edit text -->
        <item name="android:hint">@string/search_hint</item>
    </style>

    <style name="OutlinedMaterialCard" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">false</item>
        <item name="cardCornerRadius">@dimen/rounded_corner</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/colorOnBackgroundLight</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/colorBackground</item>
        <item name="android:clickable">true</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.MediumComponent
        </item>
    </style>

    <style name="BorderedButton" parent="OutlinedMaterialCard">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">64dp</item>
        <item name="contentPaddingBottom">10dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">8dp</item>
        <item name="contentPaddingTop">10dp</item>
    </style>

    <style name="TextAppearance.RSS.Button" parent="TextAppearance.AppCompat.Button">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
    </style>

    <style name="TextAppearance.RSS.SettingsSection" parent="TextAppearance.Universe.Base">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="drawableTint">@color/textColorSecondary</item>
        <item name="android:drawablePadding">8dp</item>
    </style>


    <style name="AppTheme.TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.RSS.Button</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="CardViewButton" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">40dp</item>
        <item name="android:clickable">true</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.MediumComponent
        </item>
    </style>
</resources>